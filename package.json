{
    "name": "vscode-hirl-extension",
    "displayName": "HIRL Extension",
    "description": "Provides some language extension capabilities for HIRL",
    "version": "1.1.0",
    "publisher": "pawesko169",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:hirl"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/PawelSkorupa/HIRL-VSCode-Extension"
    },
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "HIRL extension configuration",
            "properties": {
                "hirl-extension.compilerPath": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies path to the HIRL compiler"
                },
                "hirl-extension.tabSize": {
                    "type": "number",
                    "default": 2,
                    "enum": [2, 4],
                    "description": "Specifies the size of the indentation for the formatter"
                }
            }
        },
        "languages": [
            {
                "id": "hirl",
                "aliases": [
                    "hirl"
                ],
                "extensions": [
                    ".hirl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hirl",
                "scopeName": "source.hirl",
                "path": "./syntaxes/hirl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "hirl",
                "path": "./snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "7.0.7",
        "prettier": "^3.1.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    }
}
