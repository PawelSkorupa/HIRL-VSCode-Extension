{
    "name": "vscode-hirl-extension",
    "displayName": "HIRL Extension",
    "description": "Provides some language extension capabilities for HIRL",
    "version": "1.2.0",
    "publisher": "Pawe≈Ç Skorupa",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:hirl"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Jacajack/vscode-glsl-linter.git"
    },
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "HIRL extension configuration",
            "properties": {
                "hirl-extension.compilerPath": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies path to the HIRL compiler"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "7.0.7",
        "@types/mocha": "^2.2.42"
    }
}
